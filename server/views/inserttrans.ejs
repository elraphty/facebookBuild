<script>

 $(document).ready(function(){

 let=obj={};

 $.ajax({
  type:"GET",
  url:"/admin/words",
  success:function(data){
    $.each(data,function(i,value){

     obj[value.word.toString()]=null

    });
     
  },
  error:function(e)
  {
    alert(e.toString());
  }
});
   

    $('input.autocomplete').autocomplete({
      data:obj
    });


  });
 </script>